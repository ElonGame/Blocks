#version 300 es

precision mediump float;

in vec3 colors;
in vec3 vp;

out vec3 color;

void main(){
	vec3 offset;

	offset = abs(vp - floor(vp));

	offset.x = min(offset.x, 1.0 - offset.x);
	offset.y = min(offset.y, 1.0 - offset.y);
	offset.z = min(offset.z, 1.0 - offset.z);

	offset.x = pow(offset.x, 0.1);
	offset.y = pow(offset.y, 0.1);
	offset.z = pow(offset.z, 0.1);

	color = colors * vec3((offset.x + offset.y + offset.z) / 3.0);
}
